@using static FishingMania.Common.ValidationConstant;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FishingMania</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FishingMania.styles.css" asp-append-version="true" />
    <style>
       
        .navbar {
            background: linear-gradient(45deg, #003366, #0066cc); 
          
        }

            .navbar .navbar-nav .nav-link {
                color: white !important;
                font-weight: bold;
                font-size: 1.1rem;
            }

                .navbar .navbar-nav .nav-link:hover {
                    background-color: #004080; 
                    color: #fff !important;
                    border-radius: 8px;
                    transition: 0.3s ease-in-out;
                }

                .navbar .navbar-nav .nav-link.active {
                    background-color: #00509e;
                    color: white !important;
                    border-radius: 8px;
                }

            .navbar .navbar-toggler-icon {
                background-color: #fff;
            }


            .navbar-brand img:hover {
                transform: scale(1.1);
            }

  
        .custom-button-color {
            background-color: #ff7f50; 
            border-color: #ff7f50;
            border-radius: 30px;
            padding: 10px 20px;
            font-weight: bold;
            font-size: 1rem;
        }

            .custom-button-color:hover {
                background-color: #ff5722;
                border-color: #ff5722;
                transition: 0.3s ease;
            }

        .section-header {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #003366;
        }

        .container {
            margin-top: 50px;
        }

            
            .container main {
                padding: 40px 20px;
                border-radius: 15px;
                box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
            }

        .nav-item:hover {
            transform: scale(1.05);
            transition: transform 0.2s ease-in-out;
        }

        .navbar-brand{
            font-weight: bold;
           
        }

        
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .navbar-nav .nav-item {
            margin-right: 15px;
        }


        .container main {
            padding: 20px 10px;
        }

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fishing Mania</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-sm custom-button-color text-dark" asp-area="" asp-controller="FishingPlace" asp-action="FishingPlace">FishingPlace</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-sm custom-button-color text-dark" asp-area="" asp-controller="Hotel" asp-action="Hotels">All Hotels</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-sm custom-button-color text-dark" asp-area="" asp-controller="Car" asp-action="Cars">All Cars</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-sm custom-button-color text-dark" asp-area="" asp-controller="Event" asp-action="Events">Events</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-sm custom-button-color text-dark" asp-area="" asp-controller="Home" asp-action="Fish_In_Bulgaria">Fish in Bulgaria</a>
                            </li>
                        }
                        @if (User.IsInRole(AdminRoleName))
                        {
                            <li class="nav-item mx-2">
                                <a class="nav-link btn btn-sm custom-button-color text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FishingMania - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
