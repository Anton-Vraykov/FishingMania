@using FishingMania.Services.Data.Models.CarModels

@model DeleteCarViewModel
@{
    ViewBag.Title = "Delete Car";
}

<div class="text-center mb-5">
    <h2 class="display-4 font-weight-bold text-light p-4 rounded" style="background: linear-gradient(to right, #ff7e5f, #feb47b);">
        @ViewBag.Title
    </h2>
    <p class="lead text-muted">Please confirm that you want to permanently delete the following car.</p>
</div>

<hr class="my-4" />


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3 overflow-hidden zoom-effect">
            <div class="card-body">

                <h3 class="card-title text-center text-primary mb-3">
                    <i class="fas fa-fish"></i> @Model.Model
                </h3>


                <p class="text-center text-danger font-weight-bold mt-3">Are you sure you want to delete this car?</p>
                <div class="alert alert-warning text-center" role="alert">
                    This action is permanent and cannot be undone.
                </div>
            </div>


            <div class="card-footer text-center">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill custom-btn-hover mb-2">Confirm Delete</button>
                </form>
                <div class="mt-3">
                    <a asp-action="Cars" class="btn btn-secondary btn-lg w-100 rounded-pill custom-btn-hover">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>


<style>

    .zoom-effect:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }


    .custom-btn-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .custom-btn-hover:hover {
            transform: scale(1.1);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }


    .btn-danger, .btn-secondary {
        border-radius: 25px;
        font-size: 1.2rem;
    }

    .btn-danger {
        background: linear-gradient(to right, #ff6a00, #ff0000);
        border: none;
    }

    .btn-secondary {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        border: none;
    }
</style>